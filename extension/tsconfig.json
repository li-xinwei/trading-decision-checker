{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["ES2020", "DOM"],
    "types": ["chrome"]
  },
  "include": ["*.ts"],
  "exclude": ["dist"]
}
